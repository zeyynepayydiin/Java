package org.csystem.app;

class App {
    public static void main(String[] args)
    {
        A x = A.create(); //constructoru private yapıpıp factory metot da yazmazsak burada da bu sefer
                          //nesne yaratamazdık

        x.foo();
    }
}


class B extends A { //error  

}

class A {
    //...  
    private A()
    {
    }

    public static A create() //factory metot bu işte
    {
        return new A();
    }

    public void foo()
    {
        //...  
    }
    //...  
}
